        mouse_layer {
            display-name = "Mouse";
            sensor-bindings = <&scroll_down_up>;
            bindings = <
&kp ESC    &none   &none  &none   &none   &none                              &trans  &trans  &trans  &trans                     &none           &none      &none      &none      &none     &none
&kp TAB    &none   &none  &none   &none   &none                              &trans  &trans  &trans  &trans                     &none           &none      &none      &none      &none     &none
&kp LCTRL  &none   &none  &none   &none   &msc SCRL_UP    &msc SCRL_LEFT     &trans  &trans  &trans  &trans    &msc SCRL_LEFT   &msc SCRL_UP    &mkp LCLK  &mkp MCLK  &mkp RCLK  &mkp MB4  &mkp MB5
&kp LSHFT  &none   &none  &none   &none   &msc SCRL_DOWN  &msc SCRL_RIGHT    &trans  &trans  &trans  &trans    &msc SCRL_RIGHT  &msc SCRL_DOWN  &none      &none      &none      &kp M     &trans
